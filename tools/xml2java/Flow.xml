<application name="HAScenario2">
	<component type="Numeric_Controller" instanceId="InputController1">
        <property name="output" default="127"/>
		<link fromProperty="output" toInstanceId="Threshold1" toProperty="threshold" />		
	</component>
	<component type="Light_Sensor" instanceId="LightSensor1">
        <property name="refresh_rate" default="100"/>
		<link fromProperty="current_value" toInstanceId="Threshold1" toProperty="value">
			<linkProperty type="minChangeFilter" value="2"/> <!-- Can't do the minChange filter yet -->
		</link>
	</component>
	<component type="Threshold" instanceId="Threshold1">
		<property name="operator" default="LTE"/>
		<link fromProperty="output" toInstanceId="AndGate1" toProperty="input1" />
	</component>
	<component type="Occupancy_Sensor" instanceId="Occupancy1">
        <property name="occupied" default="true"/>
		<link fromProperty="occupied" toInstanceId="AndGate1" toProperty="input2" />
	</component>
	<component type="And_Gate" instanceId="AndGate1">
		<link fromProperty="output" toInstanceId="Light1" toProperty="on_Off" />
	</component>
	<component type="Light" instanceId="Light1" />
</application>
